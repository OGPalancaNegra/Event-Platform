<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">





    <androidx.cardview.widget.CardView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="3dp"
        app:cardElevation="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="10dp"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"

            >


            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@mipmap/ic_launcher"
                android:id="@+id/event_image"

                ></ImageView>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RandomText"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_toRightOf="@id/event_image"
                android:layout_marginLeft="20dp"
                android:id="@+id/event_title">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:text="Date and Time"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/event_image"
                android:layout_below="@+id/event_title"
                android:id="@+id/event_date_time"
                android:layout_marginTop="5dp"
                >

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:text="event location"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/event_image"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/event_date_time"
                android:id="@+id/event_location"
                >

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:text="50$"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/event_image"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/event_location"
                android:id="@+id/event_price"
                >

            </TextView>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>




    <com.google.android.material.appbar.AppBarLayout
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Booking Total"
            android:textSize="20dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_alignParentLeft="true">

        </TextView>

            <TextView
                android:id="@+id/booking_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="5dp"
                android:text="Â£0.00"
                android:textSize="20dp">

            </TextView>



        </RelativeLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/checkout_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/buy_ticket_button"
            android:text="Checkout"
            android:textColor="@color/white">

        </androidx.appcompat.widget.AppCompatButton>

    </com.google.android.material.appbar.AppBarLayout>



</androidx.constraintlayout.widget.ConstraintLayout>